@using CricketVerse.Services
@inject LanguageService LanguageService
@namespace CricketVerse.Shared

<div class="nav-container">
    <div class="nav-brand p-4">
        <i class="fas fa-baseball-ball fa-2x text-primary"></i>
        <span class="brand-name ms-2">CricketVerse</span>
    </div>

    <div class="nav-category">
        <div class="category-title">General</div>
        <nav class="flex-column">
            <div class="nav-item">
                <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                    <i class="fas fa-home"></i>
                    <span>@LanguageService.GetTranslation("Home")</span>
                </NavLink>
            </div>

            <div class="nav-item">
                <NavLink class="nav-link" href="live-scores">
                    <i class="fas fa-chart-line"></i>
                    <span>@LanguageService.GetTranslation("LiveScores")</span>
                    <span class="badge bg-danger ms-auto">LIVE</span>
                </NavLink>
            </div>

            <div class="nav-item">
                <NavLink class="nav-link" href="psl-schedule">
                    <i class="fas fa-calendar"></i>
                    <span>@LanguageService.GetTranslation("Schedule")</span>
                </NavLink>
            </div>

            <div class="nav-item">
                <NavLink class="nav-link" href="player-stats">
                    <i class="fas fa-chart-bar"></i>
                    <span>@LanguageService.GetTranslation("PlayerStats")</span>
                </NavLink>
            </div>
        </nav>
    </div>

    <div class="nav-category">
        <div class="category-title">Fantasy Cricket</div>
        <nav class="flex-column">
            <div class="nav-item">
                <NavLink class="nav-link" href="team-builder">
                    <i class="fas fa-users"></i>
                    <span>@LanguageService.GetTranslation("TeamBuilder")</span>
                </NavLink>
            </div>

            <div class="nav-item">
                <NavLink class="nav-link" href="teams">
                    <i class="fas fa-shield-alt"></i>
                    <span>@LanguageService.GetTranslation("MyTeams")</span>
                </NavLink>
            </div>

            <div class="nav-item">
                <NavLink class="nav-link" href="matches">
                    <i class="fas fa-gamepad"></i>
                    <span>@LanguageService.GetTranslation("MatchCenter")</span>
                </NavLink>
            </div>
        </nav>
    </div>

    <div class="nav-category">
        <div class="category-title">User</div>
        <nav class="flex-column">
            <div class="nav-item">
                <NavLink class="nav-link" href="rewards">
                    <i class="fas fa-gift"></i>
                    <span>@LanguageService.GetTranslation("Rewards")</span>
                </NavLink>
            </div>

            <div class="nav-item">
                <NavLink class="nav-link" href="wallet">
                    <i class="fas fa-wallet"></i>
                    <span>@LanguageService.GetTranslation("Wallet")</span>
                </NavLink>
            </div>

            <div class="nav-item">
                <NavLink class="nav-link" href="leaderboard">
                    <i class="fas fa-medal"></i>
                    <span>@LanguageService.GetTranslation("Leaderboard")</span>
                </NavLink>
            </div>

            <div class="nav-item">
                <NavLink class="nav-link" href="profile">
                    <i class="fas fa-user"></i>
                    <span>@LanguageService.GetTranslation("Profile")</span>
                </NavLink>
            </div>
        </nav>
    </div>

    <div class="sponsor-section">
        <div class="sponsor-text">Official Sponsor</div>
        <i class="fas fa-university fa-2x text-light"></i>
    </div>
</div>

<style>
    .nav-container {
        height: 100%;
        display: flex;
        flex-direction: column;
        background-color: #1a1f2c;
        overflow-y: auto;
    }

    .nav-brand {
        border-bottom: 1px solid rgba(255,255,255,0.1);
        display: flex;
        align-items: center;
    }

    .brand-name {
        color: white;
        font-weight: bold;
        font-size: 1.2rem;
    }

    .nav-category {
        padding-top: 1rem;
    }

    .category-title {
        color: #6c757d;
        font-size: 0.75rem;
        text-transform: uppercase;
        font-weight: 600;
        letter-spacing: 1px;
        padding: 0.5rem 1.5rem;
    }

    .nav-item {
        padding: 0.1rem 1rem;
    }

    .nav-link {
        color: rgba(255,255,255,0.8);
        border-radius: 0.5rem;
        padding: 0.75rem 1rem;
        display: flex;
        align-items: center;
        gap: 1rem;
        transition: all 0.2s ease;
        font-size: 0.9rem;
    }

    .nav-link:hover {
        color: white;
        background-color: rgba(255,255,255,0.1);
        transform: translateX(3px);
    }

    .nav-link.active {
        color: white;
        background: linear-gradient(90deg, #4440cc 0%, #7359ff 100%);
        box-shadow: 0 4px 10px rgba(115, 89, 255, 0.3);
    }

    .nav-link.active:hover {
        transform: translateX(3px) scale(1.02);
    }

    .nav-link i {
        width: 20px;
        text-align: center;
        font-size: 1.1rem;
    }

    .nav-link span {
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .badge {
        font-size: 0.65rem;
        font-weight: 500;
        padding: 0.35rem 0.5rem;
        animation: pulse 2s infinite;
    }

    @@keyframes pulse {
        0% {
            opacity: 1;
        }
        50% {
            opacity: 0.6;
        }
        100% {
            opacity: 1;
        }
    }

    .sponsor-section {
        margin-top: auto;
        padding: 1rem;
        border-top: 1px solid rgba(255,255,255,0.1);
        text-align: center;
    }

    .sponsor-text {
        color: #6c757d;
        font-size: 0.75rem;
        margin-bottom: 0.5rem;
    }
</style> 